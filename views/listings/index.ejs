<!-- NOTE: This is the ejs template for displaying all the listing on the /listings page of the website. It sends a GET request to view each listing in detail -->

<% layout('/layouts/boilerplate') -%>  <!-- templating done with the help of ejs-mate -->
<body>
    <h3>All Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id%>" class="listing-link">
            <div class="card col">
                <img class="card-img-top" src="<%= listing.image %>" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title%></b> <br>
                    &#8377 <%= listing.price.toLocaleString("en-IN") %> /night
                </p>
            </div>
        </div>
            </a>
            

        
        <% } %>
    </div>
    
</body>
